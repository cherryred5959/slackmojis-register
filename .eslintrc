{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": "off",
    "comma-dangle": [
      "error",
      {
        "arrays": "always",
        "objects": "ignore",
        "imports": "always",
        "exports": "always",
        "functions": "never"
      }
    ],
    "linebreak-style": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": "error",
    "no-trailing-spaces": "off"
  }
}